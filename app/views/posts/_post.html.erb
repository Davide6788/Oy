<div class="message_container" id="message-<%=post.id%>">
    <div class= "author">
      <div class="author">
        <div class= "avatar">
         <%= cl_image_tag(post.business.photo.key,
          style:'', class: "avatar-business-img") %>
        </div>
        <div class= "author-name">
          <div class= "business-name">
            <p class= "bold"><%= link_to post.business.name, business_path(post.business.id) %></p>
          </div>
          <div class="business-address">
            <p class="light"><%= post.business.address %></p>
          </div>
        </div>
      </div>
    </div>
      <div class="business-card-image">
        <% unless post.photo.key.nil? %>
          <%= cl_image_tag(post.photo.key,
          style:'height:13rem;width:100%;object-fit:cover;', class: "posts-image-img") %>
        <% end %>
        <button class="btn btn-like">
    <span class="btn-icon btn--icon-default">
        <span class="fa fa-heart"></span>
    </span>
    <span class="btn-icon btn--icon-liked">
        <span class="fa fa-heart"></span>
    </span>
    <span class="btn-content  btn-content--liked">
    </span>
    <span class="btn-content btn-content--default">
    </span>
</button>
      <div class= "post-message">
        <div class= "business-name-message">
          <p><span class="business-name-message"><%= post.business.name %></span> <span class="business-content-message"><%= post.content %></span></p>

        </div>

      </div>
      <small><%= post.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </div>
    </div>
