<div class="business-card-full d-flex justify-content-center">
  <div class="business-card-details col-12 col-sm-10 col-md-8">
    <div class="business-card-header">
      <div class="category-label d-inline-flex">
        <p><%= @business.category.category %></p>
      </div>
      <h2><%= @business.name %></h2>
      <p class="light"><%= @business.address %></p>
    </div>

    <div class="business-card-image">
      <% if @business.photo.key.nil? %>
        <%= cl_image_tag("i9i2cfvj6deun9x23yvc3av45knv",
        style:'height:12rem;width:100%;', class: "business-card-image-img") %>
      <% else %>
        <%= cl_image_tag(@business.photo.key,
        style:'height:12rem;width:100%;', class: "business-card-image-img") %>
      <% end %>
    </div>

    <div class=business-card-description>
      <p class="light business-card-description-text"><%= @business.description %></p>
    </div>
    <div class="business-card-button d-flex justify-content-center">
      <button class="directions-btn btn">
      Get directions
      </button>
    </div>

    <div class="business-card-footer">
      <% if @business.host_names %>
        <p class="bold">Owners:</p>
        <p class="light"><%= @business.host_names %></p>
      <% end %>
    </div>
  </div>
</div>

<% if @card %>
  <div class="stamp-card-full">
    <div class="stamp-card-stamps">
      <div class="stamp-card-counter " data-controller="add-stamp-animation">
        <ul class="stamp-card-grid">
          <% @card.points.times do %>
            <li>
              <div class="stamp stamp-active"></div>
            </li>
          <% end %>
            <li>
              <div class="stamp stamp-next" data-add-stamp-animation-target="stamp-next"></div>
            </li>
          <% (@reward_mechanism.counter - @card.points - 1).times do %>
            <li>
              <div class="stamp"></div>
            </li>
          <% end %>
        </ul>
        <h2><%= @card.points %>/<%= @reward_mechanism.counter %></h2>
      </div>
    </div>
    <div class="stamp-card-details">
      <div class="category-label">
        <p>Reward</p>
      </div>
        <p><%= @reward_mechanism.discount %></p>
    </div>
  </div>
<% end %>
